<%= simple_form_for @list, :url => user_list_path(current_user, @list), :html => {:class => 'form-horizontal' } do |f| %>
  <%= f.input :title %>
  <%= f.input :description %>
  <%= f.button :submit, :class => 'btn btn-primary' %> 
  <%= link_to t('cancel'), user_lists_path(current_user) , :class => "btn" %>
<% end %>