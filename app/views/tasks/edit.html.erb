<%= simple_form_for @task, :url => user_list_task_path(current_user, params[:list_id], @task), :html => {:class => 'form-horizontal' } do |f| %>
  <%= f.input :title %>
  <%= f.input :description %>
  <%= f.input :due_date, :wrapper => :append do %>
    <%= f.input_field :due_date, :as => :date_picker %><span class="add-on"><i class="icon-calendar"></i></span>
  <% end %>
  <%= f.button :submit, :class => 'btn btn-primary'%> 
  <%= link_to t('cancel'), user_list_path(current_user, params[:list_id]) , :class => "btn" %>
<% end %>
